{
    "compilerOptions": {
        "module": "es2015",
        "typeRoots": ["node_modules/@types"],
        "target": "es5",
        "sourceMap": true,
        "declaration": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "lib": [
            "dom",
            "es5",
            "es6",
            "es7"
        ],
        "strictNullChecks": true,
        "noFallthroughCasesInSwitch": true
    },
    "compileOnSave": false
}
